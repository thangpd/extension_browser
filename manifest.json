{
  "manifest_version": 2,
  "name": "Hoàn tiền mua sắm",
  "version": "1.0",
  "description": "Smart shopping with hoantianmuasam.com. This extension will notify you when forgot to active redeem when you shopping",
  "icons": {
    "16": "assets/image/icon16.png",
    "32": "assets/image/icon32.png",
    "48": "assets/image/icon48.png",
    "128": "assets/image/icon128.png"
  },
  "web_accessible_resources": [
    "assets/image/*"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "assets/js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://tiki.vn/*"
      ],
      "css": [
        "assets/css/extension.css"
      ],
      "js": [
        "assets/js/lib/jquery-3.4.1.min.js",
        "assets/js/content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "assets/image/icon.png"
  }
}
